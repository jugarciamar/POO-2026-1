import math

class Circulo:
    def __init__(self, radio):
        self.radio = radio
        self.area = 0
        self.longitud = 0

    def calcular(self):
        self.area = math.pi * self.radio ** 2
        self.longitud = 2 * math.pi * self.radio

    def mostrar(self):
        print("El area es:", self.area)
        print("La longitud es:", self.longitud)

dato = float(input("Ingrese el radio: "))
obj = Circulo(dato)
obj.calcular()
obj.mostrar()
